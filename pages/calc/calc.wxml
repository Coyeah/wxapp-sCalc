<!--pages/calc/calc.wxml-->
<view class="section">
  <view class="show">
    <text id="{{}}">{{waitData}}</text>
    <text class="show-input">{{screenData}}</text>
  </view>
  <view class="border"></view>
  <view class="keyboard">
    <view class="row">
      <view class="touch color-black" bindtap="clickBtn" id="{{idb}}">DEL</view>
      <view class="touch color-black" bindtap="clickBtn" id="{{idc}}">C</view>
      <view class="touch color-black" bindtap="clickBtn" id="{{idt}}">+/-</view>
      <view class="touch color-black" bindtap="clickBtn" id="{{idd}}">/</view>
    </view>
    <view class="row">
      <view class="touch color-black" bindtap="clickBtn" id="{{id7}}">7</view>
      <view class="touch color-black" bindtap="clickBtn" id="{{id8}}">8</view>
      <view class="touch color-black" bindtap="clickBtn" id="{{id9}}">9</view>
      <view class="touch color-black" bindtap="clickBtn" id="{{idm}}">*</view>
    </view>
    <view class="row">
      <view class="touch color-black" bindtap="clickBtn" id="{{id4}}">4</view>
      <view class="touch color-black" bindtap="clickBtn" id="{{id5}}">5</view>
      <view class="touch color-black" bindtap="clickBtn" id="{{id6}}">6</view>
      <view class="touch color-black" bindtap="clickBtn" id="{{ids}}">-</view>
    </view>
    <view class="row">
      <view class="touch color-black" bindtap="clickBtn" id="{{id1}}">1</view>
      <view class="touch color-black" bindtap="clickBtn" id="{{id2}}">2</view>
      <view class="touch color-black" bindtap="clickBtn" id="{{id3}}">3</view>
      <view class="touch color-black" bindtap="clickBtn" id="{{ida}}">+</view>
    </view>
    <view class="row">
      <view class="touch color-black" bindtap="clickBtn" id="{{id0}}">0</view>
      <view class="touch color-black" bindtap="clickBtn" id="{{idp}}">.</view>
      <view class="touch twoArea color-orange" bindtap="clickBtn" id="{{ide}}">=</view>
    </view>
  </view>
</view>